<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="@dimen/pop_up_title_padding"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/small_box_uncheck"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_pop_up_title_size"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                app:fontFamily="@font/clanpro_narr_medium"
                tools:ignore="MissingPrefix"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/webview_pop_up_height"
            android:padding="@dimen/linear_webview_parent_padding"
            android:layout_marginTop="@dimen/book_now_view_margin_top"
            android:layout_marginBottom="@dimen/book_now_view_margin_bottom"
            >
            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btnOk"
            android:layout_width="@dimen/btn_pop_up_width"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/book_now_view_margin_top"
            android:layout_marginBottom="@dimen/book_now_view_margin_bottom"
            />
    </LinearLayout>
</RelativeLayout>












