<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/small_box_uncheck"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_pop_up_title_size"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                app:fontFamily="@font/clanpro_narr_medium"
                tools:ignore="MissingPrefix"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_pop_up_mesg_size"
            android:textColor="@color/grey_dark"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:layout_marginTop="@dimen/book_now_view_margin_top"
            android:layout_marginBottom="@dimen/book_now_view_margin_bottom"
            app:fontFamily="@font/clanpro_narr_medium"
            tools:ignore="MissingPrefix"
            />
        <RelativeLayout
            android:layout_width="@dimen/pop_up_retry_btn_parent_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/book_now_view_margin_top"
            android:layout_marginBottom="@dimen/book_now_view_margin_bottom"
            >
            <Button
                android:id="@+id/btnContinue"
                android:layout_width="@dimen/btn_pop_up_width"
                android:layout_height="wrap_content"
                android:text="@string/continuee"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@color/colorPrimary"
                />
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="@dimen/btn_pop_up_width"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@color/colorPrimary"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>












